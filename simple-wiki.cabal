  main-is:             Main.hs
  build-depends:       base >=4.7 && <4.8, pandoc >=1.13 && <1.14, happstack-server >=7.3 && <7.4, blaze-html >=0.7 && <0.8, transformers >=0.4 && <0.5,
                       directory >= 1.2.1.0
  hs-source-dirs:      src
  default-language:    Haskell2010
